#include <stdio.h>  
//ele precisa de nome, idade, matricula, endereço, curso, 
//periodo, disciplinas e mensalidade
int main(){
 char nome[100];
 int idade;
 char matricula [20];
 char endereco[200];
 char curso[100];
 char periodo;
 char disciplina [100];
 float mensalidade; 

printf("Para concluir seu cadastro escreva seus dados:\n ");
printf("Escreva seu Nome:\n ");
scanf("%s", &nome);

printf("Escreva sua Idade:\n");
scanf("%i", &idade);

printf("Escreva sua Matricula:\n");
fgets(matricula,12,stdin);

printf("\nEscreva seu Endereço:\n");
fgets(endereco,50,stdin);

printf("Escreva seu Curso:\n");
scanf("%s",curso);

printf("Escreva seu Periodo:\n");
scanf("%s",periodo);

printf("Escreva sua Disciplina:\n");
scanf("%s",disciplina);

printf("Escreva sua Mensalidade:\n");
scanf("%f",mensalidade);

printf("_\n");
printf("Nome do cliente:%s\n", nome );
printf("Idade do cliente:%i\n", idade );
printf("Matricula :%s\n", matricula );
printf("Curso :%s\n", curso);
printf("Periodo:%s\n", periodo );
printf("Disciplina:%s\n", disciplina );
printf("Mensalidade:R$ %.3f\n", mensalidade );

return 0;
}
